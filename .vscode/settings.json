{
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "never",
		"source.addMissingImports": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.organizeImports.biome": "explicit"
	},
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnSave": true,
	"yaml.customTags": [
		"!Ref",
		"!Sub scalar",
		"!Sub sequence",
		"!Join sequence",
		"!FindInMap sequence",
		"!GetAtt scalar",
		"!GetAtt sequence",
		"!Base64 mapping",
		"!GetAZs",
		"!Select scalar",
		"!Select sequence",
		"!Split sequence",
		"!ImportValue",
		"!Condition",
		"!Equals sequence",
		"!And",
		"!If",
		"!Not",
		"!Or"
	],
	"emeraldwalk.runonsave": {
		"commands": [
			{
				"match": "template.yaml",
				"cmd": "npm run build"
			},
			{
				"match": "package.json",
				"cmd": "npm run build"
			},
			{
				"match": ".*.ts",
				"cmd": "npm run build"
			}
		]
	},
	"todohighlight.keywords": [
		{
			"text": "WIP:",
			"color": "black",
			"backgroundColor": "yellow",
			"description": ""
		},
		{
			"text": "NOTE:",
			"color": "black",
			"backgroundColor": "#88DDFF"
		},
		{
			"text": "HACK:",
			"color": "white",
			"backgroundColor": "#DD88FF"
		},
		{
			"text": "REFACTOR:",
			"color": "black",
			"backgroundColor": "#99FF99"
		}
	],
	"todohighlight.defaultStyle": {
		"color": "black",
		"backgroundColor": "#eee",
		"cursor": "pointer"
	}
}

